<h1 style="text-align:center;">Please input your workouts below:</h1>

<div class = "inputFormContainer">
  <form id="inputNew">
    
    <label for="name">Name:&nbsp;&nbsp;</label>
    <input type="text" name="name" id="name" required>
      <br /><br />
      
    <label for="reps">Reps: &nbsp;&nbsp;</label>
    <input type="number" name="reps" id="reps">
      <br /><br />
      
    <label for="weight">Weight: </label>
    <input type="number" name="weight" id="weight">
      <br /><br />
    
    Unit (leave unchecked for kilograms, checked for pounds):
    <input type="checkbox" name="measurement" id="measurement">
      <br /><br />
    
    <label for = "date">Date:</label>	
    <input type="date" name="date" id="date">
      <br /><br />

    <input type="button" name="addItem" value="Add Item" class = "addButton" onClick="addNew()">
  </form>
</div>

<br /> <br />


<h3 style = "text-align:center">Your workouts...</h3>
<table id="dataTable">
	<theader>
    <tr>
      <th>Name</th>
      <th>Reps</th>
      <th>Weight</th>
      <th>KG/LBS</th>
      <th>Date</th>
      <th>Delete</th>
      <th>Update</th>
    </tr>
  </theader>

  <tbody>
    {{#if exercises}}
      {{#each exercises}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.reps}}</td>
          <td>{{this.weight}}</td>
          <td>{{this.lbs}}</td>
          <td>{{this.date}}</td>
          <td>
            <input type="button" name="delete" value="Delete"
            onClick="deleteExercise('dataTable',{{this.id}})">
            <input type="hidden" id="remove-{{this.id}}">
            </td>

          <td>
            <a href="/?id={{this.id}}"><input type="button" value="Update"></a>
            </td>
        </tr>
      {{/each}}
    {{/if}}
  </tbody>
</table>

<script src="/javascript/rowScript.js"></script>